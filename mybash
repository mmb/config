export EDITOR=vi
export HISTIGNORE=" *"

alias update='sudo sh -c "apt-get update ; apt-get upgrade ; gem1.8 update"'

GREEN='\e[0;32m'
BLUE='\e[0;34m'
RESET='\e[0m'

export PS1="${debian_chroot:+($debian_chroot)}\u@\h:\[$BLUE\]\w\[$RESET\]\$(git branch 2>/dev/null | sed -n 's/^\* \(.*\)/ git:\[$GREEN\]\1\[$RESET\]/p')\$ "

. ~/mybash_private
